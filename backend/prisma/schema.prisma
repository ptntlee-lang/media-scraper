generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Media {
  id        Int      @id @default(autoincrement())
  sourceUrl String   @map("source_url")
  mediaUrl  String   @map("media_url")
  type      MediaType
  alt       String?
  title     String?
  createdAt DateTime @default(now()) @map("created_at")

  @@index([type])
  @@index([sourceUrl])
  @@map("media")
}

enum MediaType {
  image
  video
}
