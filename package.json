{
  "name": "media-scraper",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint \"frontend/src/**/*.{ts,tsx,js,jsx}\" \"backend/src/**/*.ts\" --ext .ts,.tsx,.js --max-warnings=0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "eslint-config-prettier": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
