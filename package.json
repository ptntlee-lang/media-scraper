{
  "name": "media-scraper",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint \"frontend/src/**/*.{ts,tsx,js,jsx}\" \"backend/src/**/*.ts\" --ext .ts,.tsx,.js --max-warnings=0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "cd backend && npm run build --noEmit && cd ../frontend && npx tsc --noEmit"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "eslint-plugin-react": "^7.32.2"
  },
  "lint-staged": {
    "backend/src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'cd backend && npm run build'"
    ],
    "frontend/src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
